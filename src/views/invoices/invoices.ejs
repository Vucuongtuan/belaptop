<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      href="https://unpkg.com/purecss@2.0.3/build/pure-min.css"
      integrity="sha384-cg6SkqEOCV1NbJoCu11+bm0NvBRc8IYLRGXkmNrqUBfTjmMYwNKPWBTIKyw9mHNJ"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="./style.css" />
  </head>
  <body>
    <div class="container">
      <div class="pure-g">
        <div class="pure-u-1"><%- body %></div>
      </div>
    </div>

    <h1><a href="/invoices">Unpaid Invoices</a></h1>

    <% for (let invoice of invoices) { %>

    <div class="pure-g">
      <div class="pure-u-1-2"><h1>Invoice</h1></div>
      <div class="pure-u-1-2" style="text-align: right">
        <p class="muted">Issued on <%= date %></p>
      </div>
    </div>
    <div class="pure-g">
      <div class="pure-u-1-2">
        <h3>Provider</h3>
        <p>
          <strong>Tiller, Inc.</strong><br />
          1255 S. Clark<br />
          Chicago, IL 60608
        </p>
      </div>
      <div class="pure-u-1-2" style="text-align: right">
        <h3>Billed to</h3>
        <p>
          <strong><%= invoice.name %></strong><br />
          <%= invoice.email %><br />
          <%= invoice.address %><br />
          <%= invoice.phone %>
        </p>
      </div>
    </div>
    <table class="pure-table pure-table-horizontal">
      <thead>
        <tr>
          <th>ID</th>
          <th>Plan Name</th>
          <th class="text-right">Amount</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= invoice.listProduct.idProduct %></td>
          <td><%= invoice.listProduct.name %></td>
          <td class="text-right">${%= invoice.listProduct.subtotal %></td>
        </tr>
        <tr>
          <td></td>
          <td class="text-right">Subtotal:</td>
          <td class="text-right">${%= invoice.listProduct.subtotal %></td>
        </tr>
        <tr>
          <td></td>
          <td class="text-right">Taxes and Fees:</td>
          <td class="text-right">${%= invoice.listProduct.fee %></td>
        </tr>
        <tr class="bold">
          <td></td>
          <td class="text-right">Total:</td>
          <td class="text-right">${%= invoice.listProduct.total %></td>
        </tr>
      </tbody>
    </table>
    <div class="footer">
      <p>
        Please make checks payable to <strong>Tiller, Inc</strong>. Invoices are
        due 30 days after date issued.
      </p>
      <p>Thank you for your business!</p>
    </div>
  </body>
</html>
